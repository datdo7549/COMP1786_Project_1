<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/item_trip_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imvAirplane"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_airplane"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTripName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip"
        android:layout_marginStart="13dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/dark_grey"
        app:layout_constraintTop_toTopOf="@id/imvAirplane"
        app:layout_constraintStart_toEndOf="@id/imvAirplane"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateOfTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/06"
        android:layout_marginStart="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/dark_grey"
        app:layout_constraintTop_toTopOf="@id/imvAirplane"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>